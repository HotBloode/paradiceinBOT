        <TextBox x:Name="tbChance"  HorizontalAlignment="Left" Height="18" Margin="91.4,155,0,0" TextWrapping="Wrap" Text="49,5" VerticalAlignment="Top" Width="36" Grid.Column="1" RenderTransformOrigin="0.531,0.407" PreviewTextInput="TextFormat_PreviewTextInput" KeyDown="TbChance_KeyDown"/>
        <TextBox x:Name="tbMulty" HorizontalAlignment="Left" Height="19" Margin="91.4,177,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="36" Grid.Column="1" RenderTransformOrigin="-0.111,-0.653" IsEnabled="False" PreviewTextInput="TextFormat_PreviewTextInput" KeyDown="TbMulty_KeyDown"/>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="6.4,160,0,0" VerticalAlignment="Top" Width="81">
            <RadioButton x:Name="chance" Content="chance" Margin="0,0,-0.2,0" Checked="RadioButton_Checked" IsChecked="True"/>
            <RadioButton x:Name="multiply" Content="multiply" Checked="RadioButton_Checked_1"/>
        </StackPanel>


    </Grid>
</Window>
