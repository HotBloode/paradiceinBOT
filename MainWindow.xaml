        <Button x:Name="bt1" Content="Start" HorizontalAlignment="Left" Margin="17.4,27,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click1" Grid.Column="1" Height="19"/>

        <TextBlock x:Name="tb1"  HorizontalAlignment="Left" Margin="10,54,0,0" TextWrapping="Wrap" Text="Пока пусто" VerticalAlignment="Top" Height="171" Width="120"/>


        <ComboBox x:Name="cb1" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Width="120" Height="22">
            <TextBlock Text="LTC"/>
            <TextBlock Text="DASH"/>
            <TextBlock Text="BTC"/>
            <TextBlock Text="ETH"/>
            <TextBlock Text="DOGE"/>
            <TextBlock Text="PRDC"/>
        </ComboBox>
        <TextBox x:Name="textBet1" HorizontalAlignment="Left" Height="19" Margin="17.4,82,0,0" TextWrapping="Wrap" Text="0,00000001" VerticalAlignment="Top" Width="75" PreviewTextInput="TextFormat_PreviewTextInput" Grid.Column="1"/>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="49" Margin="7.4,106,0,0" VerticalAlignment="Top" Width="95">
            <RadioButton Content="ABOVE"/>
            <RadioButton Content="BELOW"/>
            <RadioButton Content="lternate"/>
